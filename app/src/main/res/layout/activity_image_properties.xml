<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".features.posts.ImageFullScreenActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageThumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/TitleProp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/ImgPropMargin"
                android:padding="@dimen/ImgPropMargin"
                android:text="@string/image_title_prop"
                android:textSize="@dimen/TextSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DescriptionProp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/ImgPropMargin"
                android:background="@color/imgPropDescCol"
                android:padding="@dimen/ImgPropMargin"
                android:text="@string/description_prop"
                android:textSize="@dimen/TextSize"

                />

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</LinearLayout>